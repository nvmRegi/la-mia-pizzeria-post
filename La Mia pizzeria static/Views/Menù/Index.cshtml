@{
    Layout = "_MioLayout";
}

@model List<Pizza>

<div class="container">
    <div class="row mt-3">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Ingredienti</th>
                <th scope="col">Foto</th>
                <th scope="col">Prezzo</th>
            </tr>
        </thead>
        <tbody>
        @foreach(Pizza pizza in Model)
        {
            <tr>
                <th>@pizza.Nome</th>
                <td>@pizza.Ingrediente</td>
                <td><img src="@pizza.Image" alt="" width=250></td>
                <td>&euro;@pizza.Prezzo</td>
            </tr>
        }
        </tbody>
    </table>
    </div>
</div>